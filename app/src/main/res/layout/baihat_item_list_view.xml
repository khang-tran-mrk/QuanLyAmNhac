<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:gravity="center"
    android:clickable="true"
    android:longClickable="true"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bh_mabaihat"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:textSize="12dp"
        android:background="@drawable/border_table"
        android:text="12"/>
    <TextView
        android:id="@+id/bh_tenbaihat"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/border_table"
        android:textSize="12dp"
        android:text="ten bai hat"/>
    <TextView
        android:id="@+id/bh_namsangtac"
        android:layout_width="80dp"
        android:background="@drawable/border_table"
        android:padding="5dp"
        android:textSize="12dp"
        android:layout_height="40dp"
        android:text="1-1-2020"/>
    <TextView
        android:id="@+id/bh_tennhacsi"
        android:layout_width="120dp"
        android:background="@drawable/border_table"
        android:padding="5dp"
        android:textSize="12dp"
        android:layout_height="40dp"
        android:text="ten nhac si"/>
</LinearLayout>