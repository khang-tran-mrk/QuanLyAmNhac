<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:gravity="center"
    android:clickable="true"
    android:longClickable="true"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_mabieudien"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="@drawable/border_table"
        android:padding="5dp"
        android:text="1"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/tv_tencasi"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/border_table"
        android:textSize="12dp"
        android:text="khanh phuong"/>
    <TextView
        android:id="@+id/tv_tenbaihat"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/border_table"
        android:textSize="12dp"
        android:text="chiec khan gia am"/>
    <TextView
        android:id="@+id/tv_ngaybieudien"
        android:layout_width="80dp"
        android:background="@drawable/border_table"
        android:padding="5dp"
        android:textSize="12dp"
        android:layout_height="40dp"
        android:text="1-1-2020"/>
    <TextView
        android:id="@+id/tv_diadiem"
        android:layout_width="75dp"
        android:background="@drawable/border_table"
        android:padding="5dp"
        android:textSize="12dp"
        android:layout_height="40dp"
        android:text="quan trin"/>
</LinearLayout>