<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/primary"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edt_mabieudien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:paddingLeft="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/border_radius"
        android:hint="Mã biễu diễn"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/sp_edt_macasi"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/border_radius"
            android:paddingLeft="20dp"
            android:text="123"
            tools:ignore="SpeakableTextPresentCheck" />
    <EditText
        android:id="@+id/edt_tencasi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:editable="false"
        android:paddingLeft="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/border_radius"
        android:hint="Tên ca sĩ"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/sp_edt_mabh"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/border_radius"
            android:paddingLeft="20dp"
            android:text="123"
            tools:ignore="SpeakableTextPresentCheck" />
        <EditText
            android:id="@+id/edt_tenbh"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:editable="false"
            android:paddingLeft="20dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_radius"
            android:hint="Tên bài hát"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_ngaybd"
        android:layout_width="200dp"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius"
        android:hint="Ngày biễu diễn"/>
    <EditText
        android:id="@+id/edt_diadiem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:background="@drawable/border_radius"
        android:hint="Địa điểm"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <android.widget.Button
            android:id="@+id/btn_edit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@drawable/border_radius"
            android:text="Trở về"/>
        <android.widget.Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius"
            android:text="Cập Nhập"/>
    </LinearLayout>


</LinearLayout>